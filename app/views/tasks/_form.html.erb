<turbo-frame id="new_task_form">
  <div class="bg-white shadow-md rounded-lg p-6 border border-gray-200">
    <h2 class="text-xl font-semibold text-gray-800 mb-4">Task</h2>

    <%= form_with model: task, remote: true, class: "space-y-4" do |f| %>
      <div>
        <%= f.label :title, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :title, class: "w-full mt-1 px-3 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div>
        <%= f.label :description, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_area :description, class: "w-full mt-1 px-3 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div>
        <%= f.label :status, class: "block text-sm font-medium text-gray-700" %>
        <%= f.select :status, ["To do", "In Progress", "Completed"], {}, class: "w-full mt-1 px-3 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="mt-4">
        <%= f.submit "Save", class: "w-full px-4 py-2 bg-green-500 text-white rounded-md hover:bg-green-600 transition" %>
      </div>
    <% end %>
  </div>
</turbo-frame>

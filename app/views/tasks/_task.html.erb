

<turbo-frame id="<%= dom_id(task, 'edit') %>">
  <div class="bg-white shadow-md rounded-lg p-4 mb-4 border border-gray-200">
    <h3 class="text-lg font-semibold text-gray-800"><%= task.title %></h3>
    <p class="text-gray-600"><%= task.description %></p>
    <p class="text-sm text-gray-500 font-medium">Status: <%= task.status %></p>

    <div class="mt-3 flex space-x-2">
      <%= link_to "Edit", edit_task_path(task), 
            data: { turbo_frame: "task_form", turbo_stream: true }, 
            class: "px-4 py-2 bg-yellow-500 text-white rounded-md hover:bg-yellow-600 transition" %>

      <% if task.completed? %>
        <%= button_to "Delete", task_path(task), 
              method: :delete, 
              data: { turbo_confirm: "Are you sure?" }, 
              class: "px-4 py-2 bg-red-500 text-white rounded-md hover:bg-red-600 transition" %>
      <% end %>
    </div>
  </div>
</turbo-frame>

